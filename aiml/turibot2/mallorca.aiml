        <pattern>QUE PUEDO VISITAR EN *</pattern>
        <template><srai>^ lugares ^ mallorca</srai></template>
    </category>
      <category>
        <pattern>* VER EN MALLORCA</pattern>
        <template><srai>^ lugares ^ mallorca</srai></template>
